<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/cyan</item>
        <item name="colorPrimaryDark">@color/cyan_dark</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="About" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.WhiteBackground">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="FlatButton">
        <item name="android:textAppearance">@style/FlatButton.TextAppearance</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:minWidth">64dp</item>
    </style>

    <style name="FlatButton.TextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

</resources>
